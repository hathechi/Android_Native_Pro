<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/br2"

    tools:context=".Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="Join us for free!"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:text="USER NAME"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/botron_edittext"
            android:ems="10"
            android:hint=". . ."
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:textColorHint="#000"
            app:backgroundTint="#fff" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:text="PASS WORD"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:layout_marginLeft="50dp"

            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/botron_edittext"
            android:ems="10"
            android:hint=". . ."
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textColorHint="#000"
            app:backgroundTint="#fff" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:text="CF PASS WORD"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etCFpass"
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:layout_marginLeft="50dp"

            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/botron_edittext"
            android:ems="10"
            android:hint=". . ."
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textColorHint="#000"
            app:backgroundTint="#fff" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:text="EMAIL"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/botron_edittext"
            android:hint=". . ."
            android:inputType="textEmailAddress"
            android:paddingLeft="30dp"
            android:textColorHint="#000"
            app:backgroundTint="#fff" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:text="BIRTH DAY"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etNgaysinh"
                android:layout_width="wrap_content"

                android:layout_height="60dp"
                android:layout_marginLeft="50dp"

                android:layout_marginBottom="6dp"
                android:background="@drawable/botron_edittext"
                android:ems="10"
                android:hint="dd/mm/yyyy"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:textColorHint="#C3C0C0"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/btnChonngay"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@drawable/radius_button"
                android:text="Chọn"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:text="SEX"
            android:textColor="#FFFFFF" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/botron_edittext"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rbNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:checked="true"
                android:text="NAM" />

            <RadioButton
                android:id="@+id/rbNu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:buttonTint="#000000"
                android:text="NỮ" />




        </RadioGroup>


        <TextView
            android:id="@+id/tvError_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            />

        <CheckBox
            android:id="@+id/checkbox_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:buttonTint="#FFFFFF"
            android:checked="false"
            android:text="Đồng ý với điều khoản và dịch vụ "
            android:textColor="@color/white">

        </CheckBox>


        <Button
            android:id="@+id/btnRegister_regis"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/radius_button"
            android:backgroundTint="#00BFA5"
            android:gravity="center|center_horizontal"
            android:text="SIGN UP"
            android:textColor="#fff"
            android:textSize="40px" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="HAVE ACCOUNT? LOG IN NOW "
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btnLogin_regis"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:background="@drawable/radius_button"
            android:backgroundTint="@drawable/state_button"
            android:gravity="center|center_horizontal"
            android:text="LOGIN"
            android:textColor="#fff"
            android:textSize="40px" />


    </LinearLayout>


</ScrollView>