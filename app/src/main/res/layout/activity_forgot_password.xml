<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/br2"
    tools:context=".Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Don't worry"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:text="Will send the new password by email"
            android:textColor="@color/white"
            android:textSize="18dp"


            />

        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_error_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="5dp"
                android:text="EMAIL"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botron_edittext"
                android:hint=". . ."
                android:inputType="textEmailAddress"
                android:paddingLeft="30dp"
                android:textColorHint="#000"
                app:backgroundTint="#fff" />
        </LinearLayout>




        <TextView
            android:id="@+id/tvError_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#D50000" />


        <Button
            android:id="@+id/btnResendpass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:background="@drawable/radius_button"
            android:backgroundTint="@drawable/state_button"
            android:gravity="center|center_horizontal"
            android:text="RESEND PASSWORD"
            android:textColor="#fff"
            android:textSize="40px" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Check your email and follow the instructions  to reset your password"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


    </LinearLayout>


</ScrollView>