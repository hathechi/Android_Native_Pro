<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_enterpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#F45DA1">

        <TextView
            android:id="@+id/tv_error_enterpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:text="Enter the password"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/botron_edittext"
            android:hint=". . ."
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:textColorHint="#000"
            app:backgroundTint="#fff" />

        <Button
            android:id="@+id/btnResendpassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_button"
            android:backgroundTint="@drawable/state_button"
            android:gravity="center|center_horizontal"
            android:text="RESEND PASSWORD"
            android:textColor="#fff"
            android:textSize="40px" />


    </LinearLayout>
</LinearLayout>